<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_f5">

    <include
        android:id="@+id/title"
        layout="@layout/common_title"/>

    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llVersion"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="版本更新"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvVersionCode"
                android:drawableRight="@drawable/ic_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="版本号 V1.0.0"
                android:textColor="@color/black_55"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_below="@+id/llVersion"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_cc" />


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/llContract"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tvContract"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="隐私政策"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
            <TextView
                android:drawableRight="@drawable/ic_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_cc" />

        <RelativeLayout
            android:id="@+id/rlOpenSource"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/OpenSource"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="版权信息"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
            <TextView
                android:drawableRight="@drawable/ic_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_cc" />

        <RelativeLayout
            android:id="@+id/rlAbout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tvAbout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="关于"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
            <TextView
                android:drawableRight="@drawable/ic_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/rlLogout"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
            <TextView
                android:drawableRight="@drawable/ic_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black_55"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        >


        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="玩Android APP Copyright @2020-2020\n冯永阁版权所有,禁止商业使用 "
            android:textColor="@color/white_ce"
            android:textSize="14sp" />

    </RelativeLayout>



</RelativeLayout>