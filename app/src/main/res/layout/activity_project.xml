<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fengyongge.wanandroidclient.activity.channel.ProjectActivity">

  <include
      android:id="@+id/title"
      layout="@layout/common_title"
      />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlProject"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabIndicator="@drawable/layerlist_tab_bg"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorColor="@color/blue_theme"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/blue_theme"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/tlProject"
        android:id="@+id/vpProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  </RelativeLayout>


